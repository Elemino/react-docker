{
    "name": "yarsk",
    "version": "1.0.3",
    "description": "Yet Another React Starter Kit",
    "license": "ISC",
    "author": "Damiano Barbati <damiano.barbati@gmail.com> (http://github.com/damianobarbati)",
    "main": "index.js",
    "scripts": {
        "jslint": "eslint **/*.js --ignore-path .gitignore",
        "unserve": "pm2 delete ./config/pm2.config.js",
        "serve:dev": "pm2 flush && pm2 startOrReload ./config/pm2.config.js --env development -i 1 && pm2 logs",
        "serve:stg": "pm2 startOrReload ./config/pm2.config.js --env staging -i max",
        "serve:prod": "pm2 startOrReload ./config/pm2.config.js --env production -i max",
        "build:dev": "NODE_ENV=development webpack --config ./config/webpack.config.js --progress --watch --mode development",
        "build:stg": "NODE_ENV=staging webpack --config ./config/webpack.config.js --progress --mode production",
        "build:prod": "NODE_ENV=production webpack --config ./config/webpack.config.js --progress --mode production",
        "test": "jest --no-cache --coverage",
        "test:watch": "jest --watchAll --no-cache --coverage",
        "codebase:size": "find . -name '*.js' -not -path './node_modules/**' -not -path './dist/**' | xargs wc -l"
    },
    "browserslist": [
        "chrome 64",
        "firefox 58",
        "safari 11.1",
        "ios_saf 11.3",
        "edge 17"
    ],
    "bundles": [
        {
            "name": "visitor",
            "baseRoute": "/",
            "js": "./apps/visitor/index.js",
            "html": "./apps/index.html",
            "favicon": "./logo.png",
            "manifest": {
                "name": "Yarsk",
                "short_name": "yrsk",
                "description": "Yet Another React Starter Kit",
                "start_url": ".",
                "theme_color": "#000",
                "background_color": "#fff",
                "orientation": "portrait",
                "display": "standalone"
            }
        }
    ],
    "host": {
        "development": {
            "url": "https://localhost:8080",
            "hostname": "localhost",
            "httpPort": 8080,
            "httpsPort": 9090
        }
    },
    "ssl": {
        "cert": "./ssl/localhost.cert",
        "key": "./ssl/localhost.key"
    },
    "database": {
        "hostname": "localhost",
        "name": "",
        "username": "",
        "password": ""
    },
    "cache": {
        "host": "127.0.0.1",
        "port": 6379
    },
    "google": {
        "analyticsTrackingID": "XYZ"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 2017,
            "sourceType": "module",
            "impliedStrict": true,
            "ecmaFeatures": {
                "jsx": true,
                "impliedStrict": true,
                "globalReturn": false,
                "experimentalObjectRestSpread": true
            }
        },
        "env": {
            "browser": true,
            "node": true,
            "jest": true,
            "es6": true
        },
        "plugins": [
            "react",
            "jest"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "plugin:jest/recommended"
        ],
        "rules": {
            "no-console": "off",
            "no-unreachable": "off",
            "no-unused-vars": "off"
        }
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "modules": false,
                    "useBuiltIns": "usage",
                    "debug": true
                }
            ],
            [
                "@babel/preset-stage-0",
                {
                    "decoratorsLegacy": true
                }
            ],
            "@babel/preset-react"
        ]
    },
    "jest": {
        "bail": true,
        "verbose": true,
        "transformIgnorePatterns": [
            "!node_modules/react-runtime"
        ],
        "setupFiles": [
            "raf/polyfill"
        ]
    },
    "dependencies": {
        "axios": "^0.18.0",
        "better-console": "^1.0.1",
        "binize": "^1.0.4",
        "ioredis": "^3.2.2",
        "jws": "^3.1.4",
        "kcors": "^2.2.1",
        "koa": "^2.5.0",
        "koa-basic-auth": "^2.0.0",
        "koa-body": "^2.5.0",
        "koa-compress": "^2.0.0",
        "koa-json": "^2.0.2",
        "koa-mount": "^3.0.0",
        "koa-no-trailing-slash": "^2.1.0",
        "koa-ratelimit": "^4.0.0",
        "koa-router": "^7.4.0",
        "koa-send": "^4.1.3",
        "koa-sslify": "^2.1.2",
        "koa-useragent": "^1.0.1",
        "lodash": "^4.17.5",
        "luxon": "^1.0.0",
        "node-schedule": "^1.2.5",
        "nodemailer": "^4.6.4",
        "pg": "^7.4.1",
        "sleep-promise": "^2.0.0",
        "yargs": "^11.0.0"
    },
    "devDependencies": {
        "@babel/core": "7.0.0-beta.43",
        "@babel/polyfill": "7.0.0-beta.43",
        "@babel/preset-env": "7.0.0-beta.43",
        "@babel/preset-react": "7.0.0-beta.43",
        "@babel/preset-stage-0": "7.0.0-beta.36",
        "babel-eslint": "^8.2.1",
        "babel-jest": "^22.4.3",
        "babel-loader": "^8.0.0-beta.1",
        "case-sensitive-paths-webpack-plugin": "^2.1.2",
        "classnames": "^2.2.5",
        "clean-webpack-plugin": "^0.1.19",
        "compression-webpack-plugin": "^1.1.11",
        "css-loader": "^0.28.11",
        "eslint": "^4.19.1",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-jest": "^21.15.0",
        "eslint-plugin-react": "^7.7.0",
        "file-loader": "^1.1.11",
        "graphjql": "^1.1.4",
        "history": "^4.7.2",
        "html5-webpack-plugin": "^1.0.10",
        "img-loader": "^2.0.1",
        "jest": "^22.4.3",
        "jss-reset": "^1.0.2",
        "lodash-es": "^4.17.8",
        "material-ui": "^1.0.0-beta.43",
        "open-browser-webpack-plugin": "^0.0.5",
        "react": "^16.2.0",
        "react-dom": "^16.3.0",
        "react-ga": "^2.4.1",
        "react-helmet": "^5.2.0",
        "react-jss": "^8.4.0",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.2.2",
        "react-router-redux": "^5.0.0-alpha.6",
        "react-router-transition": "^1.2.1",
        "reax-helpers": "^1.2.6",
        "style-loader": "^0.21.0",
        "typeface-roboto": "^0.0.54",
        "uglifyjs-webpack-plugin": "^1.2.3",
        "url-loader": "^1.0.1",
        "webpack": "^4.5.0",
        "webpack-bundle-analyzer": "^2.11.1",
        "webpack-cli": "^2.0.14",
        "webpack-notifier": "^1.6.0"
    }
}
