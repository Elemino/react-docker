{
    "name": "yarsk",
    "version": "1.0.0",
    "description": "Yet Another React Starter Kit",
    "license": "ISC",
    "author": "Damiano Barbati <damiano.barbati@gmail.com> (http://github.com/damianobarbati)",
    "main": "index.js",
    "scripts": {
        "jslint": "eslint **/*.js --ignore-path .gitignore",
        "unserve": "pm2 delete ./config/pm2.config.js",
        "serve:dev": "pm2 flush && pm2 startOrReload ./config/pm2.config.js --env development -i 1 && pm2 logs",
        "serve:stg": "pm2 startOrReload ./config/pm2.config.js --env staging -i max",
        "serve:prod": "pm2 startOrReload ./config/pm2.config.js --env production -i max",
        "build:dev": "NODE_ENV=development webpack --config ./config/webpack.config.js --progress --watch --mode development",
        "build:stg": "NODE_ENV=staging webpack --config ./config/webpack.config.js --progress --mode production",
        "build:prod": "NODE_ENV=production webpack --config ./config/webpack.config.js --progress --mode production",
        "test": "jest --no-cache --coverage",
        "test:watch": "jest --watchAll --no-cache --coverage"
    },
    "browserslist": [
        "edge 17",
        "chrome 64",
        "firefox 58",
        "safari 11.1"
    ],
    "host": {
        "development": {
            "url": "http://localhost:8080",
            "hostname": "localhost",
            "httpPort": 8080
        }
    },
    "database": {
        "hostname": "localhost",
        "name": "",
        "username": "",
        "password": ""
    },
    "cache": {
        "host": "127.0.0.1",
        "port": 6379
    },
    "bundles": [
        {
            "name": "",
            "baseRoute": "/",
            "js": "./app/index.js",
            "html": "./app/index.html"
        }
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 2017,
            "sourceType": "module",
            "impliedStrict": true,
            "ecmaFeatures": {
                "jsx": true,
                "impliedStrict": true,
                "globalReturn": false,
                "experimentalObjectRestSpread": true
            }
        },
        "env": {
            "browser": true,
            "node": true,
            "jest": true,
            "es6": true
        },
        "plugins": [
            "import",
            "react",
            "jest"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "plugin:jest/recommended"
        ],
        "rules": {
            "no-console": "off",
            "no-unreachable": "off",
            "no-unused-vars": "off"
        }
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "modules": false,
                    "useBuiltIns": "usage",
                    "debug": true
                }
            ],
            "@babel/preset-stage-0",
            "@babel/preset-react"
        ]
    },
    "jest": {
        "bail": true,
        "verbose": true,
        "transformIgnorePatterns": [
            "!node_modules/react-runtime"
        ],
        "setupFiles": [
            "raf/polyfill"
        ]
    },
    "dependencies": {
        "axios": "^0.18.0",
        "better-console": "^1.0.1",
        "binize": "^1.0.4",
        "ioredis": "^3.2.2",
        "ip": "^1.1.5",
        "jws": "^3.1.4",
        "kcors": "^2.2.1",
        "koa": "^2.5.0",
        "koa-basic-auth": "^2.0.0",
        "koa-body": "^2.5.0",
        "koa-compress": "^2.0.0",
        "koa-json": "^2.0.2",
        "koa-mount": "^3.0.0",
        "koa-no-trailing-slash": "^2.1.0",
        "koa-ratelimit": "^4.0.0",
        "koa-router": "^7.4.0",
        "koa-send": "^4.1.3",
        "koa-sslify": "^2.1.2",
        "koa-useragent": "^1.0.1",
        "lodash": "^4.17.5",
        "moment": "^2.20.1",
        "moment-timezone": "^0.5.14",
        "node-schedule": "^1.2.5",
        "nodemailer": "^4.4.2",
        "pg": "^7.4.1",
        "puppeteer": "^1.1.0",
        "sequelize": "^4.33.4",
        "sleep-promise": "^2.0.0",
        "yargs": "^11.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-beta.40",
        "@babel/polyfill": "^7.0.0-beta.40",
        "@babel/preset-env": "^7.0.0-beta.40",
        "@babel/preset-react": "^7.0.0-beta.40",
        "@babel/preset-stage-0": "7.0.0-beta.40",
        "babel-eslint": "^8.2.1",
        "babel-jest": "^22.4.0",
        "babel-loader": "^8.0.0-beta.0",
        "case-sensitive-paths-webpack-plugin": "^2.1.1",
        "clean-webpack-plugin": "^0.1.18",
        "compression-webpack-plugin": "^1.1.7",
        "eslint": "^4.18.0",
        "eslint-loader": "^1.9.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jest": "^21.12.2",
        "eslint-plugin-react": "^7.7.0",
        "file-loader": "^1.1.8",
        "html-webpack-plugin": "webpack-contrib/html-webpack-plugin",
        "img-loader": "^2.0.1",
        "jest": "^22.4.0",
        "lodash-es": "^4.17.5",
        "open-browser-webpack-plugin": "^0.0.5",
        "url-loader": "^0.6.2",
        "webpack": "^4.0.0-beta.2",
        "webpack-bundle-analyzer-sunburst": "^1.3.0",
        "webpack-cli": "^2.0.6",
        "webpack-notifier": "^1.5.1"
    }
}
